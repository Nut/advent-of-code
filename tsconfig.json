{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "lib": ["ES2023"]
  },
  "include": ["src", "tests", "src/index.ts"],
  "exclude": ["node_modules"]
}
